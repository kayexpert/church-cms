# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your-supabase-project-url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key

# Supabase Service Role Key (server-side only, keep secret)
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# API Secret Key for internal API routes
NEXT_PUBLIC_API_SECRET_KEY=your-api-secret-key

# Cron Secret Key for authenticating cron job requests
CRON_SECRET_KEY=your-cron-secret-key

# Optional: SMS Provider Configuration (Twilio)
# NEXT_PUBLIC_SMS_PROVIDER=twilio
# TWILIO_ACCOUNT_SID=your-twilio-account-sid
# TWILIO_AUTH_TOKEN=your-twilio-auth-token
# TWILIO_PHONE_NUMBER=your-twilio-phone-number

# Optional: SMS Provider Configuration (Wigal)
# NEXT_PUBLIC_SMS_PROVIDER=wigal
# WIGAL_API_KEY=your-wigal-api-key
# WIGAL_USERNAME=your-wigal-username


# Security Configuration
ADMIN_EMAILS=admin@church.com,pastor@church.com
ENABLE_RATE_LIMITING=true
SECURITY_HEADERS=true
DISABLE_DEBUG_LOGS=true