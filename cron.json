{
  "version": 1,
  "jobs": [
    {
      "name": "process-scheduled-messages",
      "schedule": "0 8 * * *",
      "path": "/api/cron/process-scheduled-messages",
      "headers": {
        "Authorization": "Bearer ${CRON_SECRET_KEY}"
      }
    },
    {
      "name": "process-birthday-messages",
      "schedule": "0 9 * * *",
      "path": "/api/cron/process-birthday-messages",
      "headers": {
        "Authorization": "Bearer ${CRON_SECRET_KEY}"
      }
    }
  ]
}
